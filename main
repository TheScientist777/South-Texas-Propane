    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js" integrity="sha384-oesi62hOLfzrys4LxRF63OJCXdXDipiYWBnvTl9Y9/TRlw5xlKIEHpNyvvDShgf/" crossorigin="anonymous"></script>

    <script>
        // Function to update the WiFi icon based on the connection status
        function updateWifiIcon() {
            const wifiIcon = document.getElementById('wifiIcon');
            const connection = navigator.onLine ? 'online' : 'offline';

            if (connection === 'online') {
                wifiIcon.innerHTML = '<i class="fas fa-wifi"></i>';
            } else {
                wifiIcon.innerHTML = '<i class="fas fa-wifi-slash"></i>';
            }
        }

        // Call the updateWifiIcon function initially
        updateWifiIcon();

        // Listen for online/offline events and update the icon accordingly
        window.addEventListener('online', updateWifiIcon);
        window.addEventListener('offline', updateWifiIcon);
    </script>
